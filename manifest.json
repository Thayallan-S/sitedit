{
    "manifest_version": 2,
    "name": "Sitedit",
    "version": "0.1",
    "background": {
        "scripts": [
            "src/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "img/logo.png"
    },
    "permissions": [
        "storage",
        "activeTab"
    ]
}